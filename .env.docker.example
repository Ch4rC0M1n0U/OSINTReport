# ==========================================
# Configuration OSINTReport - Docker
# ==========================================

# === Base de données PostgreSQL ===
POSTGRES_USER=osint_admin
POSTGRES_PASSWORD=CHANGEZ_MOI_SECRET_FORT
POSTGRES_DB=osint_db
POSTGRES_PORT=5432

# === Meilisearch (Moteur de recherche) ===
MEILI_MASTER_KEY=CHANGEZ_MOI_CLE_MASTER_FORTE_32_CARACTERES_MINIMUM
MEILI_ENV=production
MEILI_PORT=7700

# === Backend API ===
NODE_ENV=production
BACKEND_PORT=4000

# URL de la base de données (générée automatiquement)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public

# Sécurité JWT
JWT_SECRET=CHANGEZ_MOI_SECRET_JWT_TRES_FORT_64_CARACTERES_MINIMUM_RECOMMANDE
JWT_EXPIRES_IN=7d

# Cookies sécurisés
COOKIE_SECRET=CHANGEZ_MOI_SECRET_COOKIE_FORT_32_CARACTERES_MINIMUM
COOKIE_DOMAIN=

# URL du frontend (pour CORS)
FRONTEND_URL=http://localhost:8080

# === Compte administrateur initial ===
ADMIN_EMAIL=admin@osintreport.local
ADMIN_PASSWORD=CHANGEZ_MOI_MOT_DE_PASSE_ADMIN_FORT
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=System

# === Configuration SMTP (optionnel) ===
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=OSINTReport

# === Frontend ===
FRONTEND_PORT=8080
VITE_API_BASE_URL=http://localhost:4000

# ==========================================
# Notes de sécurité :
# ==========================================
# 1. Changez TOUS les mots de passe et secrets
# 2. Utilisez des secrets forts (générateur: openssl rand -base64 32)
# 3. Ne commitez JAMAIS ce fichier avec les vrais secrets
# 4. En production, utilisez des gestionnaires de secrets (Vault, etc.)
